=render 'shared/head'

.results.row
  .map.large-4.columns
    map goes here
  .businesses.large-8.columns

    .search.row
      =form_tag search_businesses_path do
        .large-2.columns
          =label_tag :location, 'Displaying:', class: 'inline right'
        .large-4.columns
          =text_field_tag :location, @location, placeholder:'Where'
        .large-4.columns
          =text_field_tag :q, @q, placeholder:'What'
        .large-2.columns
          =submit_tag "S"

    -@businesses.each do |business|
      .business.row
        .large-3.column
          =image_tag (business.thumbnail_url || 'business_thumb_placeholder.png')
        .large-9.column

          %h2 
            =link_to business.name, business_path(business)
          %p= business.description
          %span= business.formatted_address
          %span= business.phone
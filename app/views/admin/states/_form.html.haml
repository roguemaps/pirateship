= form_for([:admin, @state]) do |f|
  - if @state.errors.any?
    #error_explanation
      %h2= "#{pluralize(@state.errors.count, "error")} prohibited this state from being saved:"
      %ul
        - @state.errors.full_messages.each do |msg|
          %li= msg
  .form-fields
    .row
      =f.label :country_id
      =f.select :country_id, options_from_collection_for_select(Country.all, :id, :name)
    .row
      =f.label :name
      =f.text_field :name
    .row
      =f.label :abbr
      =f.text_field :abbr

  .actions
    = f.submit 'Save'
